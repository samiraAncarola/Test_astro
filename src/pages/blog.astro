---
import "../styles/global.css";

const pageTitle = "Mein Astro-Lernblog";
const posts = [
    { title: "Post 1", href: "/posts/post-1/" },
    { title: "Post 2", href: "/posts/post-2/" },
    { title: "Post 3", href: "/posts/post-3/" },
];
const welcomeMessage = "Willkommen zu meinem Lernblog Ã¼ber Astro!";
const currentDate = new Date().toLocaleDateString();
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <title>{pageTitle}</title>
    </head>
    <body>
        <a href="/">Home</a>
        <a href="/about/">About</a>
        <a href="/blog/">Blog</a>

        <h1>{pageTitle}</h1>
        <p>{welcomeMessage}</p>
        <p>Heutiges Datum: {currentDate}</p>
        <p>This is where I will post about my journey learning Astro.</p>
        <ul>
            {
                posts.map((post) => (
                    <li>
                        <a href={post.href}>{post.title}</a>
                    </li>
                ))
            }
        </ul>
    </body>
</html>
